# Enable URL rewriting
RewriteEngine On

# Redirect root URL to traincollective.com
RewriteCond %{HTTP_HOST} ^offer\.traincollective\.com$ [NC]
RewriteRule ^$ https://traincollective.com/ [R=301,L]

# Redirect /coaching-1 to coaching.html
RewriteRule ^coaching-1/?$ coaching.html [L]

# Redirect /schedule-coaching to schedule.html
RewriteRule ^schedule-coaching/?$ schedule.html [L]

# Redirect /application-submitted to application-submitted.html
RewriteRule ^application-submitted/?$ application-submitted.html [L]

# Optional: Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]


